{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/common": [
        "common/libs/common/src"
      ],
      "@app/common/*": [
        "common/libs/common/src/*"
      ],
      "apps/src/*": ["apps/src/*"]
    }
  }
}